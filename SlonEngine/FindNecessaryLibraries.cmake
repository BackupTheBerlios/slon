    SET (Boost_USE_STATIC_LIBS ON)
ELSE (WIN32)
    SET (Boost_USE_STATIC_LIBS OFF)
ENDIF (WIN32)

# find packages
FIND_PACKAGE ( Boost 1.45.0 	REQUIRED	COMPONENTS signals thread unit_test_framework system filesystem iostreams)
